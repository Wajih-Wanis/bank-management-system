@model BankManagementSystemVersionFinal1.Models.CustomerModel

<form method="post">
    <div>
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="Password" value="@Model?.Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label for="PhoneNumber">Phone Number:</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model?.PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div>
        <label for="Email">Email:</label>
        <input type="text" id="Email" name="Email" value="@Model?.Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <button type="submit">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

