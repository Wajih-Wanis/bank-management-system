@model BankManagementSystemVersionFinal1.Models.Transfer

<h1>Transfer</h1>

<form asp-action="CreateTransfer">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Sender" value="@Model.Sender" />
    <div class="form-group">
        <label asp-for="ReceiverId" class="control-label"></label>
        <input asp-for="ReceiverId" class="form-control" />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

</form>
